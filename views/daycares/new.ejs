<% layout("./layout/BoilerPlate") %>
<div class="row">
  <h1 class="text-center">New Daycare</h1>
  <div class="col-6 offset-3">
    <form action="/daycares" method="post" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="daycare[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="daycare[location]"
          required

        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="daycare[image]"
          required

        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="daycare[description]"
          required

        /></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
        <span class="input-group-text" id="infant-label">Infant:&nbsp</span>
        <input
          class="form-control"
          type="text"
          id="infant-price"
          name="daycare[price][]"
          area-label="infant-label"
          placeholder="1000/month"
          required
        />
        <span class="input-group-text" id="toddler-label">Toddler: </span>
        <input
          class="form-control"
          type="text"
          id="toddler-price"
          name="daycare[price][]"
          area-label="toddler-label"
          placeholder="1000/month"
          required
        />
      </div>
      <div class="input-group mt-3">
        <span class="input-group-text" id="twos-label">Threes:   </span>
        <input
          class="form-control"
          type="text"
          id="threes-price"
          name="daycare[price][]"
          area-label="threes-label"
          placeholder="1000/month"
          required
        />
        <span class="input-group-text" id="prek-label">Pre-K:&nbsp&nbsp&nbsp</span>
        <input
          class="form-control"
          type="text"
          id="prek-price"
          name="daycare[price][]"
          area-label="prek-label"
          placeholder="1000/month"
          required
        />
      </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">add daycare</button>
      </div>
    </form>
    <a href="/daycares">All Daycare</a>
  </div>
</div>
