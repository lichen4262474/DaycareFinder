<% layout("./layout/BoilerPlate") %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img
        src="<%= daycare.image  %>"
        alt="image of daycare"
        class="card-img-top"
      />
      <div class="card-body">
        <h5 class="card-title"><%= daycare.title %></h5>
        <p class="card-text"><%= daycare.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= daycare.location %></li>
        <li class="list-group-item">
          Infant:<%= daycare.price[0] %>/month &nbspToddler: <%=
          daycare.price[1] %>/month &nbspThrees:<%= daycare.price[2] %>/month
          &nbspPre-k:<%= daycare.price[3] %>/month
        </li>
      </ul>
      <% if(currentUser && daycare.author._id.equals(currentUser._id)) {%>
      <div class="card-body">
        <a
          class="card-link btn btn-warning"
          href="/daycares/<%= daycare.id%>/edit"
          >edit</a
        >
        <form
          class="d-inline"
          action="/daycares/<%= daycare.id %>?_method=delete"
          method="post"
        >
          <button class="btn btn-danger">delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>

  <div class="col-6">
    <% if(currentUser){%>
    <h2>Leave a review</h2>
    <form
      class="mb-3 validated-form"
      action="/daycares/<%= daycare.id %>/reviews"
      method="post"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body"> review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of daycare.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          post by: <%= review.author.username %>
        </h6>
        <p class="card-text">Review: <%= review.body %></p>
        <form
          action="/daycares/<%= daycare.id  %>/reviews/<%= review.id  %>?_method=delete"
          method="post"
        >
          <% if(currentUser && review.author._id.equals(currentUser._id)) {%>
          <button class="btn btn-sm btn-danger">delete</button>
          <% } %>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
