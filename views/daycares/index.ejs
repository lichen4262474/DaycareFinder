<% layout("./layout/BoilerPlate") %>
<h1>All Daycares</h1>
<div>
  <a href="/daycares/new">add a daycare</a>
</div>
<ul>
  <% for(let daycare of daycares) {%>
  <div class="card" mb-3>
    <div class="row">
      <div class="col-md-4">
        <img
          class="img-fluid"
          src="<%= daycare.image[0].url %>"
          alt="image of daycare"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= daycare.title %></h5>
          <p class="card-text"><%= daycare.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= daycare.location %></small>
          </p>
          <a class="btn btn-primary" href="/daycares/<%= daycare.id %>"
            >View Details</a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</ul>
<div>
  <a href="/daycares">all daycares</a>
</div>
